FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           volScalarField;
    object          T;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 0 0 1 0 0 0];

internalField   uniform 1;

boundaryField
{
    left
    {
        type            fixedValue;
        value           uniform 1;
    }

    right
    {
        type            fixedValue;
        value           uniform 0;
    }

    frontAndBack    
    {
        type            empty;
    }
}


