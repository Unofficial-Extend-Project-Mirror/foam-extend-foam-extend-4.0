FoamFile
{
    version   2.0;
    format    ascii;
    class     dictionary;
    location  "system";
    object    meshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaceFile "multipleOrifices.stl";

maxCellSize 5.0;

boundaryCellSize 2.0;

minCellSize 1.00;

localRefinement
{
    "orifice01.*"
    {
        cellSize 0.1;
    } 

    "orifice02.*"
    {
        cellSize 0.2;
    }

    "orifice0[3-6].*"
    {
        cellSize 0.3;
    }
}

boundaryLayers
{
//    nLayers 3;

//    thicknessRatio 1.2;

//    maxFirstLayerThickness 0.5;

    patchBoundaryLayers
    {
        "orifice.*"
        {
            nLayers           4;

            thicknessRatio    1.2;

            maxFirstLayerThickness 0.2;

            allowDiscontinuity 0;
        }

    	"fixedWalls.*"
        {
            nLayers           4;

            thicknessRatio    1.2;

            maxFirstLayerThickness 1.0;

            allowDiscontinuity 0;
        }

	"tubes.*"
        {
            nLayers           4;

            thicknessRatio    1.2;

            maxFirstLayerThickness 1.0;

            allowDiscontinuity 0;
        }
    }

    optimiseLayer 1;
}

renameBoundary
{
    defaultName		fixedWalls;
    defaultType		wall;

    newPatchNames
    {
        "inlet.*"
        {
            newName     inlet;
            type     patch;
        }

        "outlet.*"
        {
            newName     outlet;
            type     patch;
        }
    }
}
               
     
