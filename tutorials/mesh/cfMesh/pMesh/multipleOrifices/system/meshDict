FoamFile
{
    version   2.0;
    format    ascii;
    class     dictionary;
    location  "system";
    object    meshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaceFile "multipleOrifices.stl";

maxCellSize 5.0;

//boundaryCellSize 2.0;

localRefinement
{
    "orifice01.*"
    {
        cellSize 0.1;
    } 

    "orifice02.*"
    {
        cellSize 0.2;
    }

    "orifice0[3-6].*"
    {
        cellSize 0.3;
    }

    "tubes.*"
    {
        cellSize 0.4;
    }
}

boundaryLayers
{
    nLayers 1;
}

renameBoundary
{
    defaultName		fixedWalls;
    defaultType		wall;

    newPatchNames
    {
        "inlet.*"
        {
            newName     inlet;
            type     patch;
        }

        "outlet.*"
        {
            newName     outlet;
            type     patch;
        }
    }
}


