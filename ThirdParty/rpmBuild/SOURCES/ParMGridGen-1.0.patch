+
+LIBS = -Xlinker --add-needed -Xlinker --no-as-needed -lMGridGen -lm
+PARLIBS = -Xlinker --add-needed -Xlinker --no-as-needed -lparmgrid -lMGridGen -lmpi -lm
 
 
 # What archiving to use
-AR = ar rv
+AR = gcc -shared -o
 
 # What to use for indexing the archive
 #RANLIB = ranlib
-RANLIB = ar -ts
+RANLIB = true
 
