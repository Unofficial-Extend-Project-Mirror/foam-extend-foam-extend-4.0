# Script
#     rmoall
#
# Description
#     remove all .o files
#------------------------------------------------------------------------------

# default is pwd
if [ "$#" -eq 0 ]
then
    set -- .
elif [ "$1" = "-h" -o "$1" = "-help" ]
then
    echo "Usage: ${0##*/} [dir1] .. [dirN]"
    echo "    remove all .o files"
    exit 1
fi


for i
do
    if [ -d "$i" ]
    then
        echo "removing all .o files: $i"
        find $i -name '*.o' -print | xargs -t rm 2>/dev/null
    else
        echo "no directory: $i" 1>&2
    fi
done

#------------------------------------------------------------------------------
