.SUFFIXES: .L

# For older versions of flex, the option --c++ is not avaliable
# Switching to flex++ is an alternative
#Ltoo = flex++ -f $$SOURCE ; mv lex.yy.cc $*.C ; $(CC) $(c++FLAGS) -c $*.C -o $@
Ltoo = flex -+ -f $$SOURCE ; mv lex.yy.cc $*.C ; $(CC) $(c++FLAGS) -c $*.C -o $@

.L.dep:
	$(MAKE_DEP)
